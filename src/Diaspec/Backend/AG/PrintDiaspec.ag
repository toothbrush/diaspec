----------------------------------
-- Pretty printing
----------------------------------

attr Declaration
  syn ppDia :: {Doc}  -- pretty printing (multiline mode)

sem Declaration
  | Source      lhs.ppDia = string "source"
  | Action      lhs.ppDia = string "action"
  | Context     lhs.ppDia = string "context-bluh"
  | Controller  lhs.ppDia = string "controller"